@model kurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Düzenle</h2>
<div class="form">
    @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">

            <label for="fullname" class="control-label col-lg-2">Başlık<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class=" form-control" id="Baslik" name="Baslik" type="text" value="@Model.Baslik" />
            </div>
        </div>
        <div>
            <br />
            <br />
            <br />
        </div>
        <div class="form-group ">
            <label for="address" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div>
            <br />
            <br />
            <br />
        </div>
        <div class="form-group ">
            <label for="address" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>
        <div>
            <br />
            <br />
            <br />
        </div>
        <div class="form-group ">
            <label for="username" class="control-label col-lg-2">Önceki Resim<span class="required">*</span></label>
            <div class="col-lg-10">
                <img src="@Model.ResimURL" width="150" height="150">
            </div>
        </div>
        <div>
            <br />
            <br />
            <br />
        </div>
        <div class="form-group ">
            <label for="username" class="control-label col-lg-2">Resim<span class="required">*</span></label>
            <div class="col-lg-10">
                <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png.,.jpeg" />
            </div>
        </div>
        <div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/Blog/Index">İptal</a></button>
            </div>
        </div>}
    @*<form class="form-validate form-horizontal " id="register_form" method="post" action="/Blog/Create/" enctype="multipart/form-data">*@

    @*</form>*@
</div>
